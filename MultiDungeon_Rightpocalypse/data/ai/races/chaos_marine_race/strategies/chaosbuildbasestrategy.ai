              end
              if (iRequisition >= 500 and iPower >= 1000) or (self.tierLevel==4 and iRequisition >= 300 and iPower >= 300) then
		self:DynamicAddon("chaos_list_post_addon_2", 1*Numpoint, 2, 0, 0, 0, 0, nil, nil, false)
