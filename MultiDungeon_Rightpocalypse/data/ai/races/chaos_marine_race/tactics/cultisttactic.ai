class 'CultistTactic' (ChaosMarineInfantryTactic)

Cultist = {}

function CultistTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Cultist Tactic")
end

function CultistTactic:IsAttacker()
	return (cpu_manager:GetTierLevel() >= 2)
end

function CultistTactic:InitAbilities()

	-- Init ability ID's
	if (Cultist.rage_id == nil) then
		Cultist.rage_id = cpu_manager.stats:GetAbilityID( "chaos_furious_rage" )	
	end

	if (Cultist.worshipkhorne_id == nil) then
		Cultist.worshipkhorne_id = cpu_manager.stats:GetAbilityID( "chaos_cultist_worship_khorne" )	
	end

	if (Cultist.worshipnurgle_id == nil) then
		Cultist.worshipnurgle_id = cpu_manager.stats:GetAbilityID( "chaos_cultist_worship_nurgle" )	
	end

	if (Cultist.worshipslaanesh_id == nil) then
		Cultist.worshipslaanesh_id = cpu_manager.stats:GetAbilityID( "chaos_cultist_worship_slaanesh" )	
	end

	if (Cultist.worshiptzeentch_id == nil) then
		Cultist.worshiptzeentch_id = cpu_manager.stats:GetAbilityID( "chaos_cultist_worship_tzeentch" )	
	end
end

function CultistTactic:DoAbilities()

	if (self.squad_ai:GetHealthPercentage() >= 0.3) then

		-- Search a squad
		local oUnit = Ability.Filters.CloseHurt(self.squad_ai:GetPosition(), 20, 2)
		if (oUnit ~= nil and oUnit:IsInCombat() and cpu_manager:GetUnitStrength(oUnit) > 100) then

			if (self.squad_ai:CanDoAbility(Cultist.worshipkhorne_id)) then
				self.squad_ai:DoSpecialAbility(Cultist.worshipkhorne_id)
				--Ability.DoAbilityArea(self.squad_ai, Cultist.worshipkhorne_id, Ability.Filters.CloseEnemy, 10, 2)
			end

			if (self.squad_ai:CanDoAbility(Cultist.worshipnurgle_id)) then
				self.squad_ai:DoSpecialAbility(Cultist.worshipnurgle_id)
				--Ability.DoAbilityArea(self.squad_ai, Cultist.worshipnurgle_id, Ability.Filters.CloseEnemy, 10, 2)
			end

			if (self.squad_ai:CanDoAbility(Cultist.worshipslaanesh_id)) then
				self.squad_ai:DoSpecialAbility(Cultist.worshipslaanesh_id)
				--Ability.DoAbilityArea(self.squad_ai, Cultist.worshipslaanesh_id, Ability.Filters.CloseEnemy, 10, 2)
			end

			if (self.squad_ai:CanDoAbility(Cultist.worshiptzeentch_id)) then
				self.squad_ai:DoSpecialAbility(Cultist.worshiptzeentch_id)
				--Ability.DoAbilityArea(self.squad_ai, Cultist.worshiptzeentch_id, Ability.Filters.CloseEnemy, 10, 2)
			end
		end
	end

	if (self.squad_ai:IsInCombat() and not self.squad_ai:IsCapturing() and not self.squad_ai:IsBroken()) then
	  
		-- Check if I can go berserk while stationary
		if (not self:IsMoving()) then

			if (self.squad_ai:CanDoAbility( Cultist.rage_id )) then
				self.squad_ai:DoSpecialAbility( Cultist.rage_id )
			end
		end		
	end

	-- Call basic DoAbilities methods
	ChaosMarineInfantryTactic.DoAbilities(self)
end

function CultistTactic:Upgrade()

 	-- If I am broken, don't upgrade!
	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
		return
	end
     
		-- Try for upgrade if we've a leader and more than 6 troopers
	if (self.squad_ai:HasUpgradableTrooper() and self.squad_ai:GetNumTroopers() >= 4 or self.squad_ai:HasLeader()) then
		local class_type = cpu_manager:FindClosestEnemyPlayer():GetMajorityClassType()
		self.squad_ai:DoBestUpgrade( class_type )
	end

end

function CultistTactic:Reinforce()
		-- Check time, before 120 sec no need reinforce.
    if (g_iGMT <= 120) then
		return
    end 

	-- Check if we are reinforcing
	if (self.squad_ai:IsReinforcing()) then
		return
	end
	--in t1 more than 7 not need
	
	if self.squad_ai:IsInCombat() or self.squad_ai:IsUnderAttack()  then
		if (not self.squad_ai:IsReinforcing()) then
			self.squad_ai:DoReinforce(false, 0)
			--self.squad_ai:DoReinforce(true, 0)
		end
	end
	
	
	if (self.squad_ai:CanReinforce(true, 0)) then
		self.squad_ai:DoReinforce(true, 0)
		return
	end

	
	if (cpu_manager:GetTierLevel() <=2 ) and (self.squad_ai:GetNumTroopers()>=7) then
		return
	end
	
	-- If I am broken, don't upgrade!
--	if (self:IsAffectedByMorale() and self.squad_ai:IsBroken()) then
--		return
--	end

	
	
	-- Don't reinforce squads in critical condition
	if (self.squad_ai:GetNumTroopers() <= self.squad_ai:GetMaxTroopers() / 2 and self.squad_ai:IsUnderAttack()) then
		return
	end

	-- Always try to get the leader first at t2 and upper

	-- Check resources
	local iRequisition = resource_manager:GetResourceAmount():Get(ResourceAmount.RT_Requisition)
	if ((iRequisition < 340 or self.m_bPowerCost) and not Tactic.Options.can_reinforce) then
		return
	end
	
	-- Always try to reinforce, as long as I have money
	if (self.squad_ai:CanReinforce( false, 0 )) then-- and self.squad_ai:HasLeader() and cpu_manager:GetTierLevel() >= 2) then
		self.squad_ai:DoReinforce( false, 0 )
	end
end

function CultistTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
	
	local vMyPos = self.squad_ai:GetPosition()
	local vPosThreat, iAlliedStrength2 = cpu_manager:GetArmyStrengthAtPos(vMyPos, 90 , true)
	local vPosThreat2, iAlliedStrength = cpu_manager:GetArmyStrengthAtPos(vMyPos, 45 , true)
	if g_iGMT > 180 then
		local squad_filter = function( squad_ai )		
			return 	not squad_ai:IsBroken() and
					not squad_ai:IsCapturing() 
		end	
		local target_squad = cpu_manager:GetClosestSquad( self.squad_ai:GetPosition(), 500, squad_filter )			
		
		if not self.squad_ai:IsCapturing() and not self.squad_ai:IsUnderAttack() and not self.squad_ai:IsInCombat()
		and self.squad_ai:IsIdle() and not self.squad_ai:IsBroken() then--and iAlliedStrength < vPosThreat*1.3  then
			if target_squad  ~= nil then
				cpu_manager:DoMove(self.squad_ai, Vector3f(target_squad:GetPosition()), true, "AttackState")	
				--print("check")
				--print(target_squad  ~= nil)
			end
		end
	end
	
    -- ???????? ID ??????
    local armoury_id = cpu_manager.stats:GetBuildingID("chaos_armoury")
    
    -- ????????? ??????? ??????????? ??????
    if armoury_id and cpu_manager.player_stats:GetNumBasesByBPID(armoury_id, true) > 0 then
        -- ???????? ???????
        if cpu_manager:GetTierLevel() >= 1 and 
           self.squad_ai:GetMeleeStance() ~= SquadAI.MSTANCE_Ranged then
            self.squad_ai:DoSetMeleeStance(SquadAI.MSTANCE_Ranged)
        end
    end
end