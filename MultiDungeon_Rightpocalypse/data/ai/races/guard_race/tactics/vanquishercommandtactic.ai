class 'VanquisherCommandTactic' (GuardVehicleTactic)

VanquisherCommand = {}

function VanquisherCommandTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("Vanquisher Command Tank Tactic")

	-- Vehicle is a heavy transport
	self.m_iTransportVehicle = 2
	self.m_iTransportSlots = 1
end

function VanquisherCommandTactic:InitAbilities()

	if (VanquisherCommand.strafing_id == nil) then
		VanquisherCommand.strafing_id = cpu_manager.stats:GetAbilityID( "guard_strafing_run_tank" )
	end
	if (VanquisherCommand.mark_id == nil) then
		VanquisherCommand.mark_id = cpu_manager.stats:GetAbilityID( "guard_mark_squad" )	
	end	
end

function VanquisherCommandTactic:DoAbilities()

	if (self.squad_ai:CanDoAbility(VanquisherCommand.strafing_id)) then
		Ability.DoAbilityPos(self.squad_ai, VanquisherCommand.strafing_id, Ability.Filters.CloseEnemy, 6)
		Ability.DoAbilityPos(self.squad_ai, VanquisherCommand.strafing_id, Ability.EntityFilters.CloseBaseEntityEnemy, 2)
	end


	if (self.squad_ai:CanDoAbility(VanquisherCommand.mark_id) and self.squad_ai:IsInCombat()) then
	
		-- Get closest squad in range
		local iRange = self.squad_ai:GetAbilityRange(PathFinder.mark_id)
		local oSquad = cpu_manager.cpu_player:FindFirstEnemy(self.squad_ai:GetPosition(), iRange, 1)
		if (oSquad ~= nil) then
		
			-- Get stats
			local oStats = oSquad:GetStats()
			if (oStats ~= nil) then
			
				-- Check unit type
				local eClass = oStats:GetClass()
				if (eClass == UnitStatsAI.UC_VehicleLow or eClass == UnitStatsAI.UC_VehicleMed or
					eClass == UnitStatsAI.UC_VehicleHigh or eClass == UnitStatsAI.UC_Commander or
					eClass == UnitStatsAI.UC_MonsterHigh or oSquad:GetNumTroopers() >= 4) then
					
					-- Use mark ability on squad
					self.squad_ai:DoSpecialAbilitySquad(VanquisherCommand.mark_id, oSquad:GetSquad())
				end
			end	
		end
	end
	-- Call standard method
	GuardVehicleTactic.DoAbilities(self)
end
