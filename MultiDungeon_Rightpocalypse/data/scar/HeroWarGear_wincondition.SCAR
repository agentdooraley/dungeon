function WGear_OnInit() -- Disables wargear for normal games.

	-- Global table that stores ONLY Necrons players' IDs and necron lord types.
	-- ALSO USED IN NecronLordsBodiesFix.SCAR and Assassinate.SCAR !!
	g_Necrons_PlayersIDXs = { 0, 0, 0, 0, 0, 0, 0, 0 }
	g_Necrons_PlayersIDXs[0] = 0 -- start enumeration from zero index!

	-- Global Flag used for Assassinate/Wargear Wincodition interaction
	Is_Hero_Wargear_Enabled = {false}
	for i = 0, World_GetPlayerCount()-1 do
		local playerID = World_GetPlayerAt(i)
		local race_name = Player_GetRaceName(playerID)
	end
end


Scar_AddInit(WGear_OnInit)
