function Rule_CheckFDefenders()
	if not Player_IsAlive(g_enemy_PlayerID) then
		return
	end
	local building1count = EGroup_Count("eg_enemy_fbuildings_survival1")
	local building2count = EGroup_Count("eg_enemy_fbuildings_survival2")
	-- Do not make them attack if buildings are destroyed, in the case of Human Attacking Player
	if not g_Survival_Enemy_AI_Is_Human then
		if building1count == 0 then
			-- if we have remaining squads after the building 1 is destroyed, retreat them to defend the enemy base.
			local enemy_position = Player_GetStartPosition(g_enemy_PlayerID)
			Cmd_SetStance( "sg_defenders_fb_1",  STANCE_StandGround )Cmd_AttackMovePos("sg_defenders_fb_1",enemy_position)
			--Cmd_SetStance( "sg_defenders_fb_2",  STANCE_StandGround )Cmd_AttackMovePos("sg_defenders_fb_1",enemy_position)
		end
		if building2count == 0 then
			-- if we have remaining squads after the building 2 is destroyed, retreat them to defend the enemy base.
			local enemy_position = Player_GetStartPosition(g_enemy_PlayerID)
			Cmd_SetStance( "sg_defenders_fb_3",  STANCE_StandGround )Cmd_AttackMovePos("sg_defenders_fb_2",enemy_position)
			--Cmd_SetStance( "sg_defenders_fb_4",  STANCE_StandGround )Cmd_AttackMovePos("sg_defenders_fb_2",enemy_position)
		end
	end
	if building1count + building2count == 0 then return end
	local squads1 = SGroup_Count("sg_defenders_fb_1")
	if building1count ~= 0 and squads1 == 0 then
		if EnemyBuilding2SquadA1 ~= nil then
			Util_CreateSquadsAtPositionEx(g_enemy_PlayerID, "sg_defenders_fb_1", EnemyBuilding2SquadA1[1], g_Buildings_Marker_Survival[1], EnemyBuilding1Squad1[2], EnemyBuilding1Squad1[3])
		end

	end
	local squads2 = SGroup_Count("sg_defenders_fb_3")
	if building2count ~= 0 and squads2 == 0 then
		if EnemyBuilding2SquadA1 ~= nil then
			Util_CreateSquadsAtPositionEx(g_enemy_PlayerID, "sg_defenders_fb_3", EnemyBuilding2SquadA1[1], g_Buildings_Marker_Survival[2], EnemyBuilding2SquadA1[2], EnemyBuilding2SquadA1[3])
		end

	end
	Rule_AddOneShot(Rule_CheckFDefenders_Next,1)
end


function Rule_CheckFDefenders_Next()
	local timer = World_GetRand(20,90) + 0.25
	Rule_AddOneShot(Rule_CheckFDefenders,timer)
end


function Trigger_FBuildings_Init()
	Rule_AddOneShot(Trigger_fBuildings,602)
end


Scar_AddInit(Trigger_FBuildings_Init)
