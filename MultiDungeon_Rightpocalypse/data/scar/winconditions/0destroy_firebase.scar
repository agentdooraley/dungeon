function Trigger_fBuildings()
	survival_firebase = true

	if survival_outpost == true then
	print "outposts is currently selected ..."
	return
	else
	print "outposts is currently not selected ..."
	end
	
	if G_Is_Survival_Map == nil then
		print("NON-Survival Map.  Survival: Firebase (selected wincondition) has no effect at all - NO rule started!")
		return
	end
	--Check if there is at least ONE marker on the map of the specific name, otherwise do not initiate the rule
	if not Marker_Exists( "mk_detonate_1", "basic_marker") then
		print("Warning: *[S] Destroy Firebase * wincondition CANNOT start, because the map does not have the required markers!")
		return
	end
	g_Buildings_Marker_Survival = {"",""}
	if EnemyBuilding2SquadA1 ~= nil then
	EventCue_DoEvent ("blue_skull", "/event_cue_notifications/team_change", "Enemy Firebases!","Field recon reports of artillery movement, expect incoming barrages!")
	else
	print "Selected enemy has no suitable artillery"
	return
	end
	-- 1st building units
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_1")) -- 1st sgroup of the 1st building
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_2")) -- 2nd sgroup of the 1st building (optional)
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_3")) -- 3rd sgroup of the 1st building (optional)
	-- 2nd building units
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_4")) -- 1st sgroup of the 2nd building
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_5")) -- 2nd sgroup of the 2nd building (optional)
	SGroup_Clear(SGroup_CreateIfNotFound("sg_defenders_fb_6")) -- 3rd sgroup of the 2nd building (optional)
	-- Decide which markers we use
	local total_markers = 1
	while Marker_Exists("mk_detonate_"..total_markers,"basic_marker") do total_markers=total_markers+1 end; total_markers = total_markers - 1
	print("Total Map's different Secondary Outpost Building positions: "..total_markers)
	if total_markers == 1 then
		g_Buildings_Marker_Survival[1] = "mk_detonate_1"
		g_Buildings_Marker_Survival[2] = "mk_detonate_1"
	elseif total_markers == 2 then
		g_Buildings_Marker_Survival[1] = "mk_detonate_1"
		g_Buildings_Marker_Survival[2] = "mk_detonate_2"
	else
		local candidate_markers = {}
		for i=1, total_markers do table.insert(candidate_markers,"mk_detonate_"..i) end
		local chosen_map = World_GetRand(1,total_markers)
		g_Buildings_Marker_Survival[1] = candidate_markers[chosen_map]
		table.remove(candidate_markers,chosen_map)
		chosen_map = World_GetRand(1,total_markers-1)
		g_Buildings_Marker_Survival[2] = candidate_markers[chosen_map]
	end
	-- Start the show at a random future point
	local timer = World_GetRand(600,920)
	if g_surv_high_resources ~= nil and g_surv_high_resources then
		timer = World_GetRand(210,600)
	end
	Rule_AddOneShot(Rule_Destroy_fBuildings,timer)
end


function Rule_Destroy_fBuildings()
	if not Player_IsAlive(g_enemy_PlayerID) then
		return
	end
	EGroup_Clear(EGroup_CreateIfNotFound("eg_enemy_buildings_survival1"))
	EGroup_Clear(EGroup_CreateIfNotFound("eg_enemy_buildings_survival2"))
	local pos1 = Marker_GetPosition(Marker_FromName(g_Buildings_Marker_Survival[1],"basic_marker"))
	local pos2 = Marker_GetPosition(Marker_FromName(g_Buildings_Marker_Survival[2],"basic_marker"))
	local enemy_fbuilding1_pos = Community_Extended_SpawnablePositionSearch(pos1, EnemyBuilding2Name, g_enemy_PlayerID, 10)
	local enemy_fbuilding2_pos = Community_Extended_SpawnablePositionSearch(pos2, EnemyBuilding2Name, g_enemy_PlayerID, 10)
	g_Buildings_Marker_Survival[1] = enemy_fbuilding1_pos; g_Buildings_Marker_Survival[2] = enemy_fbuilding2_pos -- Yeah, I know, I swapped vary types..
	if not Community_DoBuildingsExistNearPos(enemy_fbuilding1_pos, 7) then
	pcall( Entity_CreateBuildingPositionForce, g_enemy_PlayerID, "eg_enemy_fbuildings_survival1", EnemyBuilding2Name, enemy_fbuilding1_pos, 1 )
	end
	if not Community_DoBuildingsExistNearPos(enemy_fbuilding2_pos, 7) then
	pcall( Entity_CreateBuildingPositionForce, g_enemy_PlayerID, "eg_enemy_fbuildings_survival2", EnemyBuilding2Name, enemy_fbuilding2_pos, 1 )
	end
	PingsAndNotificationsDB = {nil, nil}
	if EGroup_Count("eg_enemy_fbuildings_survival1") ~= 0 then
		PingsAndNotificationsDB[1] = Ping_Position(enemy_fbuilding1_pos,true,"destroy")
	end
	if EGroup_Count("eg_enemy_fbuildings_survival2") ~= 0 then
		PingsAndNotificationsDB[2] = Ping_Position(enemy_fbuilding2_pos,true,"destroy")
	end
	if PingsAndNotificationsDB[1] == nil and PingsAndNotificationsDB[2] == nil then
		-- No place for the enemy base, abort the condition!
		EventCue_DoEvent ("blue_skull", "/event_cue_notifications/team_change", "Destroy the Enemy Fire Base Aborted!","Field recon reports that the initial suspicions about the existence of enemy artillery were false. Mission aborted!")
		return
	end
	obj_table_dest_sec_buildings_surv = { title_id = 5800307, short_desc_id = 5800308, help_tip_id = 5800308 }
	Objective_Add( obj_table_dest_sec_buildings_surv, false )
	EventCue_DoEvent ("blue_skull", "/event_cue_notifications/team_change", "Destroy the Enemy Fire Base!","You have discovered an enemy firebase. Destroy it to weaken the enemy and receive a good amount of resources.")
	Rule_AddOneShot(Rule_CheckFDefenders,0)
	Rule_AddInterval(Rule_CheckEnemyFBuildingsDB,5.25)
end


function Rule_CheckEnemyFBuildingsDB()
	if not Player_IsAlive(g_enemy_PlayerID) then
		pcall(Rule_Remove,Rule_CheckEnemyFBuildingsDB)
		return
	end
	-- Start counting buildings
	local building1count = EGroup_Count("eg_enemy_fbuildings_survival1")
	local building2count = EGroup_Count("eg_enemy_fbuildings_survival2")
	if building1count == 0 and PingsAndNotificationsDB[1] ~= nil then
		Ping_Stop(PingsAndNotificationsDB[1])
		PingsAndNotificationsDB[1] = nil
	end
	if building2count == 0 and PingsAndNotificationsDB[2] ~= nil then
		Ping_Stop(PingsAndNotificationsDB[2])
		PingsAndNotificationsDB[2] = nil
	end
	if building1count + building2count == 0 then
		for i=0, World_GetPlayerCount()-2 do
			local amount = Stats_PlayerUnitsKilled(Player_GetID(Srvl_PlayerInfo.PlayerID[i]))*5
			Player_AddResource(Srvl_PlayerInfo.PlayerID[i],RT_Requisition,amount)
			Player_AddResource(Srvl_PlayerInfo.PlayerID[i],RT_Power,amount)
		end
		EventCue_DoEvent ("warning", "/event_cue_notifications/team_change", "You destroyed the Enemy Fire Base!","This completed objective has weaken the enemy forces, and you are rewarded with a hefty amount of resources, proportionate to your kills.")
		print("Destroy Elite Base secondary objective complete!")
		Util_ObjectiveComplete(obj_table_dest_sec_buildings_surv.title_id)
		Rule_Remove(Rule_CheckEnemyFBuildingsDB)
	end
end


